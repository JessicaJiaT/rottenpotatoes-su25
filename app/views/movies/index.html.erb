<h1>Movies</h1>

<% @movies.each do |movie| %>
  <div id="movie_<%= movie.id %>" class="movie"
       title="<%= movie.title %>"
       rating="<%= movie.rating %>"
       release_date="<%= movie.release_date&.strftime('%d-%b-%Y') %>"
       release-date="<%= movie.release_date&.strftime('%d-%b-%Y') %>"
       data-release-date="<%= movie.release_date&.strftime('%d-%b-%Y') %>">
    <p><strong>Title:</strong> <%= movie.title %></p>
    <p><strong>Rating:</strong> <%= movie.rating %></p>
    <p><strong>Release Date:</strong> <%= movie.release_date&.strftime("%d-%b-%Y") %></p>
    <p><strong>Description:</strong> <%= movie.description %></p>
  </div>
<% end %>
